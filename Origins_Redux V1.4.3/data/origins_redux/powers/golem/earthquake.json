{
  "type": "origins:toggle",
  "active_by_default": false,
  "key": {
    "key": "key.origins.primary_active"
  },
  "name": "Earthquake",
  "description": "Toggle your ability to create an earthquake, shaking the ground around you and knocking back entities.",
  "hud_render": {
    "should_render": true,
    "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
    "bar_index": 1
  },
  "condition": {
    "type": "origins:on_block",
    "block_condition": {
      "type": "origins:block",
      "block": "minecraft:stone"
    }
  },
  "actions_on_toggle": {
    "entity_action": {
      "type": "origins:area_of_effect",
      "radius": 10,
      "action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:knockback",
            "strength": 3
          },
          {
            "type": "origins:apply_effect",
            "effect": {
              "effect": "minecraft:slowness",
              "duration": 100,
              "amplifier": 1
            }
          },
          {
            "type": "origins:execute_command",
            "command": "particle minecraft:dust 1 0.6 0 1 ~ ~ ~ 10 1 10 0.1 100 force"
          }
        ]
      },
      "bientity_condition": {
        "type": "origins:entity_type",
        "entity_type": "minecraft:living_entity"
      }
    }
  },
  "cooldown": 1200
}
